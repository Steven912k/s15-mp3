    <form action="/updateuser" method="POST">
      <div class="container2">
        <label for="firstname"><b>First Name</b></label>
        <input type="text" placeholder="Enter name" name="firstname" id="firstname" value={{{firstname}}} required>
        <p></p>
        <label for="name"><b>Last Name</b></label>
        <input type="text" placeholder="Enter name" name="lastname" id="lastname" value={{{lastname}}} required>
        <p></p>
        <label for="heightfeet"><b>Height Feet</b></label>
        <input type="text" placeholder="Enter height" name="heightfeet" id="heightfeet" value={{{heightfeet}}} required>
        <p></p>
        <label for="heightinch"><b>Height Inch</b></label>
        <input type="text" placeholder="Enter height" name="heightinch" id="heightinch" value={{{heightinch}}} required>
        <p></p>
        {{#if_eq sex 'male'}}
            <input type="radio" id="male" name="gender" value="male" checked>
            <label for="male">Male</label><br><br>
            <input type="radio" id="female" name="gender" value="female" >
            <label for="female">Female</label>
        {{else}}
            <input type="radio" id="male" name="gender" value="male">
            <label for="male">Male</label><br><br>
            <input type="radio" id="female" name="gender" value="female" checked>
            <label for="female">Female</label>
        {{/if_eq}}
        <p></p>
        <label for="country"><b>Country</b></label>
        <input type="text" placeholder="Change country" name="country" id="country" value={{{country}}} required>
        <p></p>
      </div>

      <script>
          function showpass(){
          document.getElementById('changepass').style.display = "block";
          document.getElementById('opsw').required =true;
          document.getElementById('npsw').required =true;
          document.getElementById('npswrepeat').required =true;
          }
          function hidepass(){
          document.getElementById('changepass').style.display = "none";
          document.getElementById('opsw').required = false;
          document.getElementById('npsw').required = false;
          document.getElementById('npswrepeat').required = false;
          }
      </script>

      <div class="container3">
        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Change email" name="email" id="email" value={{{email}}} required>
        <p></p>
        <label for="username"><b>Username</b></label>
        <input type="text" placeholder="Change username" name="username" id="username" value={{{username}}} required>
        <p></p>
        <p>Change <a href="#avatar" onclick="showpass()">password?</a>.</p>

            <div id = "changepass" style="display: none;">
            <label for="crpsw"><b>Current Password</b></label>
            <input type="password" placeholder="Current password" name="opsw" id="opsw">
            <p></p>   
            <label for="psw"><b>New Password</b></label>
            <input type="password" placeholder="New password" name="npsw" id="npsw">
            <p></p>
            <label for="psw-repeat"><b>Repeat Password</b></label>
            <input type="password" placeholder="Confirm new password" name="npswrepeat"  id="npswrepeat">
            <p></p>
            <button type="button" id="passcancel"onclick="hidepass()">Cancel</button>
            </div>

      </div>

      <hr>
      <button type="submit" value="Confirm changes" name="userupdate" id="userupdate" class="btn btn-success">Confirm changes</button>

      </div>
      <button type="reset" class="cancelbtn" >Cancel changes</button>
    </form>
