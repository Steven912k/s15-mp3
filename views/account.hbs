    function openNav() {
    document.getElementById("mySidenav").style.width = "250px";

    document.getElementById("mainhome").style.marginLeft = "250px";
    document.getElementById("aboutweightmate").style.marginLeft = "250px";
    document.getElementById("formulas").style.marginLeft = "250px";
    document.getElementById("members").style.marginLeft = "250px";
    document.getElementById("contactarea").style.marginLeft = "250px";

